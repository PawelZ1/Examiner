@model IEnumerable<Examiner.MvcClient.Models.QuestionForListViewModel>

@{
    ViewBag.Title = "Index";
    int rowNumber = 1;
}

<h2>Your Questions</h2>


<table class="table table-striped table-responsive-md table-bordered text-justify">
    <thead class="text-center">
        <tr>
            <th>No.</th>
            <th>@Html.DisplayNameFor(p => p.CreatedAt)</th>
            <th>@Html.DisplayNameFor(p => p.UpdatedAt)</th>
            <th>@Html.DisplayNameFor(p => p.Content)</th>
            <th>@Html.DisplayNameFor(p => p.NumberOfAnswers)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(rowNumber++)</td>
                <td>@Html.DisplayFor(p => item.CreatedAt)</td>
                <td>@item.UpdatedAt</td>
                <td>@item.Content</td>
                <td>@item.NumberOfAnswers</td>
                <td>
                    @Html.ActionLink("Details / Modify", "GetQuestionDetails", new { id = item.QuestionId }, new { @class = "btn btn-sm btn-outline-primary" })
                    @Html.ActionLink("Delete", "DeleteQuestion", new { id = item.QuestionId}, new {@class= "btn btn-sm btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

