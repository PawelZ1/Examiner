@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link"><span class="fas fa-power-off"></span> Logout</a></li>
        </ul>
    }
}
else
{
        <ul class="navbar-nav">
            <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })</li>
        </ul>
}

